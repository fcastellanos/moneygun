<%= render PageComponent.new(title: "Edit Academic Period", content_container: true, full_width: false) do |component| %>
  <%= form_for([@academic_period.organization, @academic_period]) do |f| %>
    <% if @academic_period.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@academic_period.errors.count, "error") %> prohibited this academic period from being saved:</h2>

        <ul>
        <% @academic_period.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field pb-4">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "form-input" %>
    </div>
    <div class="field pb-4">
      <%= f.label :description %><br />
      <%= f.text_area :description, class: "form-input" %>
    </div>
    <div class="field pb-4">
      <%= f.label :start_date %><br />
      <%= f.date_field :start_date, class: "form-input" %>
    </div>
    <div class="field pb-4">
      <%= f.label :end_date %><br />
      <%= f.date_field :end_date, class: "form-input" %>
    </div>
    <div class="inline">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>

