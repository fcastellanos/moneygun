<%= form_for([@education_level.organization, @education_level], html: { class: "space-y-6" }) do |f| %>
  <% if @education_level.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <h2 class="font-bold text-lg"><%= pluralize(@education_level.errors.count, "error") %> prohibited this course from being saved:</h2>
      <ul class="mt-2 list-disc list-inside">
        <% @education_level.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <!-- Name Field -->
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- Level Enum Field -->
    <div>
      <%= f.label :level, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :level, EducationLevel.levels.keys.map { |key| [key.humanize, key] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- Submit Button -->
    <div>
      <%= f.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>